    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Helen-O-Matic",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/helen-o-matic",
            "program": "${workspaceFolder}/community_projects/watcher/helen-o-matic/helen_o_matic.py",
            "console": "integratedTerminal",
            "args": ["--use-frame", "--hef-path", "models/helen-o-matic.v7.yolov8p.hef", "--labels-json", "models/helen-o-matic.v5-labels.json", "--input", "rpi"]
            //"args": ["--use-frame", "--hef-path", "models/helen-o-matic.v7.yolov8p.hef", "--labels-json", "models/helen-o-matic.v5-labels.json", "--input", "test_data/helen_back.mp4"]
        },
        {
            "name": "Python: Run Pigeonator",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/pigeonator",
            "program": "${workspaceFolder}/community_projects/watcher/pigeonator/pigeonator.py",
            "console": "integratedTerminal",
            "args": ["--use-frame", "--hef-path", "models/pigeonator-mk3-b.v4.yolov8p.hef", "--labels-json", "models/pigeonator-mk3-b.v3-labels.json", "--input", "rpi"]
            //"args": ["--use-frame", "--hef-path", "models/pigeonator-mk3-b.v4.yolov8p.hef", "--labels-json", "models/pigeonator-mk3-b.v3-labels.json", "--input", "test_data/pond_back1.mp4"]
        },
        {
            "name": "Python: Run All Watcher Tests",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/test_runner.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run Helen-O-Matic Tests Only",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/test_runner.py",
            "console": "integratedTerminal",
            "args": ["--app-type", "helen-o-matic"]
        },
        {
            "name": "Python: Run Helen Out Test Only",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/test_runner.py",
            "console": "integratedTerminal",
            "args": ["--app-type", "helen-o-matic", "--test-name", "helen_out_low_percent_test"]
        },
        {
            "name": "Python: Run Pigeonator Tests Only",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/test_runner.py",
            "console": "integratedTerminal",
            "args": ["--app-type", "pigeonator"]
        },
        {
            "name": "Python: List Available Tests",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/test_runner.py",
            "console": "integratedTerminal",
            "args": ["--list"]
        },
        {
            "name": "Python: Run Helen-O-Matic with Custom Output",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/set_output_dir.py",
            "console": "integratedTerminal",
            "args": [
                "--app", "helen-o-matic",
                "--output-dir", "${workspaceFolder}/community_projects/watcher/testing/custom_output",
                "--input", "test_data/helen_back.mp4"
            ]
        },
        {
            "name": "Python: Run Pigeonator with Custom Output",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/testing",
            "program": "${workspaceFolder}/community_projects/watcher/testing/set_output_dir.py",
            "console": "integratedTerminal",
            "args": [
                "--app", "pigeonator",
                "--output-dir", "${workspaceFolder}/community_projects/watcher/testing/custom_output",
                "--input", "test_data/pigeon.mp4"
            ]
        }
    ]
}