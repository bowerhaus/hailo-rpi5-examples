    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Helen-O-Matic",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/helen-o-matic",
            "program": "${workspaceFolder}/community_projects/watcher/helen-o-matic/helen_o_matic.py",
            "console": "integratedTerminal",
            //"args": ["--use-frame", "--input", "rpi"]
            "args": ["--use-frame", "--input", "testdata/helen_out.mp4"]
        },
        {
            "name": "Python: Run Pigeonator",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/pigeonator",
            "program": "${workspaceFolder}/community_projects/watcher/pigeonator/pigeonator.py",
            "console": "integratedTerminal",
            "args": ["--use-frame", "--hef-path", "models/pigeonator-mk3-b.v3i.yolov8.hef", "--labels-json", "models/pigeonator-mk3-b.v3-labels.json", "--input", "rpi"]
            //"args": ["--use-frame", "--hef-path", "models/pigeonator-mk3-b.v3i.yolov8.hef", "--labels-json", "models/pigeonator-mk3-b.v3-labels.json", "--input", "testdata/two_pigeons.mp4"]
        },
        {
            "name": "Python: Run Prepsort (helen-o-matic)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/tools",
            "program": "${workspaceFolder}/community_projects/watcher/tools/prepsort.py",
            "console": "integratedTerminal",
            "args": ["--verbose", "--input", "input/helen-o-matic", "--output", "output/helen-o-matic", "--config", "prepsort-helen-config.json", "--clean"]
        },
        {
            "name": "Python: Run Prepsort (pigeonator)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/community_projects/watcher/tools",
            "program": "${workspaceFolder}/community_projects/watcher/tools/prepsort.py",
            "console": "integratedTerminal",
            "args": ["--verbose", "--input", "input/pigeonator", "--output", "output/pigeonator", "--config", "prepsort-pigeonator-config.json", "--clean"]
        }
    ]
}